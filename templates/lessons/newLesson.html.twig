{% extends 'base.html.twig' %}

{% block title %}New Lesson{% endblock %}

{% block body %}
    <h1>New Lesson</h1>

    {{ form_start(LessonForm) }}
        {{ form_row(LessonForm.title) }}
        {{ form_row(LessonForm.description) }}
        {{ form_row(LessonForm.contactInformation) }}
