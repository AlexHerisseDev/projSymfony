{% extends 'base.html.twig' %}

{% block title %}List of lessons{% endblock %}

{% block body %}
    {% if is_granted("ROLE_TEACHER")%}
            <a href="{{path('app_newLesson')}}"<button type="button" class="btn btn-outline-info w-25">Create a new lesson</button></a>
    {% endif %}
    <ul class="pagination p-2">
        <li class="pt-1">Display per page:</li>
        <li class="page-item"><a class="page-link" href={{path("app_lessonList")}}>Unlimited</a></li>
        {% if currentDisplayPerPage == 5 %}
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">5</a>
            </li>
            {% else %}
                <li class="page-item">
                    <a class="page-link" href="{{path('app_lessonsPaginated', {'displayPerPage':5, 'page':0})}}" tabindex="-1">5</a>
                </li>
        {% endif %}
        {% if currentDisplayPerPage == 10 %}
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">10</a>
            </li>
            {% else %}
                <li class="page-item">
                    <a class="page-link" href="{{path('app_lessonsPaginated', {'displayPerPage':10, 'page':0})}}" tabindex="-1">10</a>
                </li>
        {% endif %}
        {% if currentDisplayPerPage == 25 %}
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">25</a>
            </li>
            {% else %}
                <li class="page-item">
                    <a class="page-link" href="{{path('app_lessonsPaginated', {'displayPerPage':25, 'page':0})}}" tabindex="-1">25</a>
                </li>
        {% endif %}
        {% if currentDisplayPerPage == 50 %}
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">50</a>
            </li>
            {% else %}
                <li class="page-item">
                    <a class="page-link" href="{{path('app_lessonsPaginated', {'displayPerPage':50, 'page':0})}}" tabindex="-1">50</a>
                </li>
        {% endif %}
    </ul>
    <h1>Here is a list of all currently available lessons:</h1>
    {% for lesson in lessons|slice(page*(currentDisplayPerPage),currentDisplayPerPage)%}
        <div class="m-3 p-3 border border-primary rounded lessonCard">
            <div class="pb-2">
                <h4>{{lesson.getTitle()}}</h4>
            </div>
            <a href="">
                <div class="pb-2">
                    <span class="badge text-bg-primary">{{lesson.getCategory()}}</span>
                </div>
            </a>
            <div class ="p-2">
                <div class="border-bottom pb-2">
                    {{lesson.getAvailableDates()}}
                </div>
            </div>  
            <a href="{{path('app_lessonPage', {'id': lesson.getId})}}">
                <button type="button" class="btn btn-primary">View Lesson</button>
                {# TODO : AJOUTER MODALE POTENTIELLEMENT #}
            </a>
        </div>
    {% endfor %}

    <nav aria-label="Page navigation example">
        <ul class="pagination">
            {% if page == 0 %}
                <li class="page-item disabled">
                <span class="page-link">Previous</span>
                </li>
                {% else %}
                    <li class="page-item"><a class="page-link" href={{path("app_lessonsPaginated",{'displayPerPage':currentDisplayPerPag,'page':page-1})}}>Previous</a></li>
            {% endif %}
            {% for i in range(0,nbPages) %}
                {% if i == page %}
                    <li class="page-item active">
                        <a class="page-link" href={{path("app_lessonsPaginated",{'displayPerPage':currentDisplayPerPage, 'page':i})}}> <span class="sr-only">{{i+1}}</span></a>
                    </li>
                    {% else %}
                        <li class="page-item"><a class="page-link" href={{path("app_lessonsPaginated",{'displayPerPage':currentDisplayPerPage, 'page':i})}}>{{i+1}}</a></li>            
                {% endif %}
            {% endfor %}
            {% if page == nbPages %}
                <li class="page-item disabled">
                    <span class="page-link">Next</span>
                </li>
                {% else %}
                    <li class="page-item"><a class="page-link" href={{path("app_lessonsPaginated",{'displayPerPage':currentDisplayPerPage, 'id':page+1})}}>Next</a></li>
            {% endif %}
        </ul>
    </nav>



{% endblock %}
