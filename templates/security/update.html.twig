{% extends 'base.html.twig' %}

{% block title %}Update{% endblock %}

{% block body %}
    <h1>Update</h1>
    <h3>(Leave a field empty to not update it)</h3>
    {{ form_start(updateForm) }}
        {{ form_row(updateForm.email) }}
        {{ form_row(updateForm.password, {
            label: 'Password',
        }) }}
        {{ form_row(updateForm.avatar, {
            label: 'Avatar URL',
        }) }}
        {{ form_row(updateForm.username, {
            label: "Username",
        }) }}
        {{ form_row(updateForm.description, {
            label: "Description",
        }) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(updateForm) }}
{% endblock %}
